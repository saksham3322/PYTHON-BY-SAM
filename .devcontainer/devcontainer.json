{
	"name": "Python Basics",
	"image": "mcr.microsoft.com/devcontainers/python:3.11", 
	"settings": {
	  "python.defaultInterpreterPath": "/usr/local/bin/python3",
	  "terminal.integrated.defaultProfile.linux": "bash",
	  "editor.fontSize": 16,                  // Editor font size
	  "terminal.integrated.fontSize": 14,    // Terminal font size
	  "editor.wordWrap": "on"                // Enable word wrap in the editor
	},
	"extensions": [
	  "ms-python.python", 
	  "ms-python.vscode-pylance"
	],
	"postCreateCommand": "echo 'Python Basics Dev Container Ready!'",
	"forwardPorts": [],
	"remoteUser": "vscode"
}
  